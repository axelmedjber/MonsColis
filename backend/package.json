{
  "name": "monscolis-backend",
  "version": "1.0.0",
  "description": "Backend server for MonsColis social grocery management system",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run migrate && node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "validate": "npm run lint && npm run test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "knex": "^3.0.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "minio": "^7.1.3",
    "redis": "^4.6.10",
    "twilio": "^4.19.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**",
      "!src/seeds/**"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
